<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="keyboardRootNormal">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:gravity">center|bottom</item>
    	<item name="android:background">@color/black</item>
    	<item name="android:padding">3dp</item>
    </style>
    
    <style name="keyboardRootNight" parent="keyboardRootNormal">
    	<item name="android:background">@color/red10_opaque</item>
    </style>
    
    <style name="keyboardButtonNormal">
        <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">45dp</item>
    	<item name="android:gravity">center</item>
    	<item name="android:layout_margin">3dp</item>
    	<item name="android:textColor">@color/white70</item>
    	<item name="android:background">@drawable/keyboard_key_state</item>
    	<item name="android:padding">2dp</item>
    	<item name="android:textSize">16dp</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="keyboardButtonNight" parent="keyboardButtonNormal">
        <item name="android:textColor">@color/black</item>
    	<item name="android:background">@drawable/keyboard_key_state_night</item>
    </style>
</resources>