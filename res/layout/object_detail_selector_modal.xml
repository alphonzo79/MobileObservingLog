<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/object_detail_modal_main"
   	style="@style/modalContainerNormal"
   	>
   
    <TextView  
	    android:id="@+id/modal_header"
	    android:text="@string/set_backlight_intensity"
	    style="@style/modalHeaderDay"
	    />
    
    <LinearLayout
        android:id="@+id/selectors_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/modal_header"
        >
        
        <LinearLayout
            android:id="@+id/selector_set_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical"
            >
            
            <Button 
		    	android:id="@+id/number_picker_up_button_one"
		    	style="@style/modalUpButtonNormal"
		    	android:text="@string/num_picker_up_button"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
		    	/>
		   
		    <TextView  
			    android:id="@+id/number_picker_input_field_one"
		    	style="@style/modalTextFieldNormal"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
			    />
			    
		    <Button 
		    	android:id="@+id/number_picker_down_button_one"
		    	style="@style/modalDownButtonNormal"
		    	android:text="@string/num_picker_down_button"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
		    	/>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/selector_set_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical"
            >
            
            <Button 
		    	android:id="@+id/number_picker_up_button_two"
		    	style="@style/modalUpButtonNormal"
		    	android:text="@string/num_picker_up_button"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
		    	/>
		   
		    <TextView  
			    android:id="@+id/number_picker_input_field_two"
		    	style="@style/modalTextFieldNormal"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
			    />
			    
		    <Button 
		    	android:id="@+id/number_picker_down_button_two"
		    	style="@style/modalDownButtonNormal"
		    	android:text="@string/num_picker_down_button"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
		    	/>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/selector_set_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical"
            >
            
            <Button 
		    	android:id="@+id/number_picker_up_button_three"
		    	style="@style/modalUpButtonNormal"
		    	android:text="@string/num_picker_up_button"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
		    	/>
		   
		    <TextView  
			    android:id="@+id/number_picker_input_field_three"
		    	style="@style/modalTextFieldNormal"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
			    />
			    
		    <Button 
		    	android:id="@+id/number_picker_down_button_three"
		    	style="@style/modalDownButtonNormal"
		    	android:text="@string/num_picker_down_button"
		    	android:layout_marginLeft="@dimen/ten_pix"
		    	android:layout_marginRight="@dimen/ten_pix"
		    	/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/object_selector_modal_list_layout_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/selectors_container"
        >
        
        <TextView
            android:id="@+id/object_selector_modal_list_one_header"
            style="@style/alertMainTextNormal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
	    
	    <ListView  
	        android:id="@+id/modal_list_one"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content" 
	        android:layout_margin="@dimen/five_pix"
	        />   
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/object_selector_modal_list_layout_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/object_selector_modal_list_layout_one"
        >
        
        <TextView
            android:id="@+id/object_selector_modal_list_two_header"
            style="@style/alertMainTextNormal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
	    
	    <ListView  
	        android:id="@+id/modal_list_two"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content" 
	        android:layout_margin="@dimen/five_pix"
	        />   
        
    </LinearLayout>
    	
   	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:id="@+id/save_cancel_container"
   		android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
   		android:layout_marginLeft="@dimen/fifteen_pix"
   		android:layout_marginRight="@dimen/fifteen_pix"
   		android:layout_below="@id/object_selector_modal_list_layout_two"
   		android:gravity="center_horizontal"
   		>
	    
	    <Button 
	    	android:id="@+id/alert_ok_button"
	    	style="@style/modalSaveCancelButtonNormal"
	    	android:text="@string/ok"
	    	android:layout_weight="30"
	        android:paddingLeft="@dimen/five_pix"
	        android:paddingRight="@dimen/five_pix"
	    	android:textSize="@dimen/fourteen_pix"
	    	/>
	    
	    <Button 
	    	android:id="@+id/alert_cancel_button"
	    	style="@style/modalSaveCancelButtonNormal"
	    	android:text="@string/num_picker_cancel_button"
	    	android:layout_weight="30"
	        android:paddingLeft="@dimen/five_pix"
	        android:paddingRight="@dimen/five_pix"
	    	android:textSize="@dimen/fourteen_pix"
	    	/>
	    
	    <Button 
	    	android:id="@+id/alert_extra_button"
	    	style="@style/modalSaveCancelButtonNormal"
	    	android:layout_weight="30"
	        android:paddingLeft="@dimen/two_pix"
	        android:paddingRight="@dimen/two_pix"
	    	android:textSize="@dimen/fourteen_pix"
	    	android:textScaleX="0.85"
	    	android:visibility="gone"
	    	/>
   		
	</LinearLayout>
    
</RelativeLayout>