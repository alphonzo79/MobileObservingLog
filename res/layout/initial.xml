<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layoutRootNight"
    >
    
	<TextView  
	    style="@style/headerBarNight" 
	    android:id="@+id/initialHeader" 
	    android:text="@string/app_name"
	    />
	    
	<Button xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/initialNightButton"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/night_mode"
		android:textSize="22dp"
		android:textStyle="bold"
		android:textColor="@color/red"
		android:background="@drawable/black_button_state"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="45dp"
		android:layout_marginBottom="45dp"
	    android:layout_weight="45"
		/>
		
	<Button xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/initialNormalButton"
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/normal_mode"
		android:textSize="22dp"
		android:textStyle="bold"
		android:textColor="@color/black"
		android:background="@drawable/red_button_state"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="45dp"
		android:layout_marginBottom="45dp"
	    android:layout_weight="45"
		/>
		
	<TextView  
	    android:id="@+id/initialFooter"
    	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/initial_text"
	    android:textColor="@color/red"
		android:textSize="18dp"
	    android:layout_weight="10"
		android:layout_marginBottom="10dp"
	    android:gravity="bottom|center_horizontal"
	    />
	    
</LinearLayout>
