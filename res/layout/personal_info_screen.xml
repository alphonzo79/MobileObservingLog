<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layoutRootNormal"
    android:id="@+id/personal_info_root"
    >
    
    <TextView 
	    style="@style/headerBarNormal" 
	    android:id="@+id/personal_info_header"
	    android:text="@string/app_name"
	    />
	    
    <ListView  
         android:id="@android:id/list"
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content" 
         />
    
    <TextView 
        style="@style/form_data_display_header"
	    android:id="@+id/personal_info_top_label"
	    />
	    
	<LinearLayout
        android:id="@+id/view_personal_info_address_layout"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >
    
	    <TextView
	        style="@style/form_data_display_label"
	        android:text="@string/personal_info_address_label"
	        android:layout_gravity="left"
	        />
  
	    <View
	        android:id="@+id/coords_line"
	        android:layout_width="fill_parent"
	        android:layout_height=".5dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:background="@color/black"
	        />
	    
	    <TextView 
	        style="@style/form_data_display_body"
	        android:id="@+id/view_personal_info_address"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/view_personal_info_phone_layout"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >
    
	    <TextView
	        style="@style/form_data_display_label"
	        android:text="@string/personal_info_phone_label"
	        android:layout_gravity="left"
	        />
  
	    <View
	        android:id="@+id/desc_line"
	        android:layout_width="fill_parent"
	        android:layout_height=".5dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:background="@color/black"
	        />
	    
	    <TextView 
	        style="@style/form_data_display_body"
	        android:id="@+id/view_personal_info_phone"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:gravity="top|center"
	        />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/view_personal_info_email_layout"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >
    
	    <TextView
	        style="@style/form_data_display_label"
	        android:text="@string/personal_info_email_label"
	        android:layout_gravity="left"
	        />
  
	    <View
	        android:id="@+id/desc_line"
	        android:layout_width="fill_parent"
	        android:layout_height=".5dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:background="@color/black"
	        />
	    
	    <TextView 
	        style="@style/form_data_display_body"
	        android:id="@+id/view_personal_info_email"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:gravity="top|center"
	        />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/view_personal_info_club_layout"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >
    
	    <TextView
	        style="@style/form_data_display_label"
	        android:text="@string/personal_info_club_label"
	        android:layout_gravity="left"
	        />
  
	    <View
	        android:id="@+id/desc_line"
	        android:layout_width="fill_parent"
	        android:layout_height=".5dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:background="@color/black"
	        />
	    
	    <TextView 
	        style="@style/form_data_display_body"
	        android:id="@+id/view_personal_info_club"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:gravity="top|center"
	        />
        
    </LinearLayout>
	    
    <LinearLayout
        android:id="@+id/view_personal_info_buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_horizontal"     
        >
	    
	    <Button 
	        android:id="@+id/view_personal_info_edit"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:text="Edit Information"	
	        android:layout_gravity="bottom|center_horizontal" 
	        android:gravity="center"     
	        />
	        
    </LinearLayout>
	    
</LinearLayout>