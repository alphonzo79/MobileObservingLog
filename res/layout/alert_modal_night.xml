<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/alert_modal"
   	style="@style/modalContainerNight"
   	>
   
    <TextView  
	    android:id="@+id/alert_main_text"
	    style="@style/alertMainTextNight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    />
    
    <LinearLayout 
   		android:id="@+id/save_cancel_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
   		android:layout_marginLeft="15dp"
   		android:layout_marginRight="15dp"
   		android:gravity="center_horizontal"
        android:layout_below="@id/alert_main_text" 
        >
	    
	    <Button 
	    	android:id="@+id/alert_ok_button"
	    	style="@style/modalSaveCancelButtonNight"
	    	android:text="@string/ok"
	    	android:layout_weight="30"
	    	/>
	    
	    <Button 
	    	android:id="@+id/alert_cancel_button"
	    	style="@style/modalSaveCancelButtonNight"
	    	android:text="@string/num_picker_cancel_button"
	    	android:layout_weight="30"
	    	/>
	    
	    <Button 
	    	android:id="@+id/alert_extra_button"
	    	style="@style/modalSaveCancelButtonNight"
	    	android:layout_weight="30"
	    	android:visibility="gone"
	    	/>
    
    </LinearLayout>
    
</RelativeLayout>