<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layoutRootNormal"
    android:id="@+id/catalogs_root"
    >
    
    <TextView 
	    style="@style/headerBarNormal" 
	    android:id="@+id/catalogs_header"
	    android:text="@string/app_name"
	    android:layout_alignParentTop="true"
	    />
    
    <LinearLayout 
        android:id="@+id/catalog_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
	    android:padding="16dp"
	    android:layout_alignParentBottom="true"
        >
			    
	    <Button 
	        android:id="@+id/search_button"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_gravity="bottom|center_horizontal"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:text="Search Objects"
	        android:layout_alignParentBottom="true"	      
	        />
	    
    </LinearLayout>
    
    <ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:fillViewport="true"
	    android:id="@+id/catalogs_scroll_view"
	    android:layout_below="@id/catalogs_header"
	    android:layout_above="@id/catalog_button_layout"
	    >
	    
	    <ListView  
	         android:id="@android:id/list"
	         android:layout_width="fill_parent" 
	         android:layout_height="wrap_content" 
	         />
    
    </ScrollView>
    
    <TextView 
	    android:id="@+id/nothing_here"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:text="@string/no_installed_catalogs"
	    android:gravity="center_horizontal"
	    android:layout_below="@id/catalogs_header"
        android:textSize="14dp"
        android:paddingTop="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:visibility="gone"
	    />
	    
</RelativeLayout>