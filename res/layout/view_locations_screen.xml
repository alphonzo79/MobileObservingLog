<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/layoutRootNormal"
    android:id="@+id/view_location_root"
    >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
	    >
	    
	    <ScrollView 
	        android:id="@+id/scroll_fields_view"
	        android:fillViewport="true"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:scrollbarStyle="insideOverlay"
	        >
	    
		    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    	android:id="@+id/view_location_main"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	>
		    
				<TextView  
				    style="@style/headerBarNormal" 
				    android:id="@+id/view_location_header"
				    android:text="@string/app_name"
				    />
				    
			    <ListView  
			         android:id="@android:id/list"
			         android:layout_width="fill_parent" 
			         android:layout_height="wrap_content" 
			         android:layout_below="@id/view_location_header"
			         />
			    
			    <TextView
			        style="@style/formScreenHeaderNormal"
			        android:id="@+id/view_header"
			        android:layout_below="@id/view_location_header"
			        />
			    
			    <LinearLayout
			        android:id="@+id/coordinates_layout"
			        android:orientation="vertical"
			        android:paddingLeft="14dp"
			        android:paddingRight="14dp"
			        android:paddingTop="5dp"
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content" 
			        android:layout_gravity="center"
			        android:layout_marginTop="10dp"
			        android:gravity="center_horizontal"
			        android:layout_below="@id/view_header"
			        >
			    
				    <TextView
				        style="@style/formScreenLabelNormal"
				        android:text="@string/location_coordinates_label"
				        android:layout_gravity="left"
				        />
				    
				    <TextView 
				        style="@style/formScreenTextFieldNormal"
				        android:id="@+id/location_coordinates"
				        android:layout_width="fill_parent" 
				        android:layout_height="wrap_content"
				        android:layout_marginTop="3dp"
				        />
			        
			    </LinearLayout>
			    
			    <LinearLayout
			        android:id="@+id/description_layout"
			        android:orientation="vertical"
			        android:paddingLeft="14dp"
			        android:paddingRight="14dp"
			        android:paddingTop="5dp"
			        android:layout_width="fill_parent" 
			        android:layout_height="wrap_content" 
			        android:layout_gravity="center"
			        android:layout_marginTop="10dp"
			        android:gravity="center_horizontal"
			        android:layout_below="@id/coordinates_layout"
			        >
			    
				    <TextView
				        style="@style/formScreenLabelNormal"
				        android:text="@string/location_description_label"
				        android:layout_gravity="left"
				        />
				    
				    <TextView 
				        style="@style/formScreenTextFieldNormal"
				        android:id="@+id/location_description_text_field"
				        android:layout_width="fill_parent" 
				        android:layout_height="wrap_content"
				        android:layout_marginTop="3dp"
				        android:gravity="top|left"
				        />
			        
			    </LinearLayout>
			    
		    </RelativeLayout>
		    
	    </ScrollView>
			    
	    <LinearLayout
	        android:orientation="horizontal"
	        android:paddingLeft="14dp"
	        android:paddingRight="14dp"
	        android:paddingBottom="14dp"
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent" 
	        android:layout_gravity="center"
	        android:layout_marginTop="5dp"
	        android:layout_below="@id/description_layout"
	        android:gravity="bottom"
	        >
		    
		    <Button 
		        style="@style/modalSaveCancelButtonNormal"
		        android:id="@+id/location_save"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content" 
		        android:layout_weight="33"
		        android:layout_marginRight="6dp"
		        android:text="Edit/Delete"	      
		        />
		    
		    <Button 
		        style="@style/modalSaveCancelButtonNormal"
		        android:id="@+id/location_cancel"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content" 
		        android:layout_weight="33"
		        android:layout_marginLeft="6dp"
		        android:text="Cancel"	       
		        />
		        
	    </LinearLayout>
	    
    </LinearLayout>
    
    <include android:id="@+id/settings_fog"
        layout="@layout/background_dim_out"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:visibility="invisible"
    	/>
    
    <include android:id="@+id/alert_modal"
        layout="@layout/alert_modal"
        android:layout_gravity="center|center"
        />
    
    <include android:id="@+id/keyboard_root" 
        layout="@layout/keyboard_layout_normal"
        android:layout_gravity="bottom"
        />
	    
</FrameLayout>